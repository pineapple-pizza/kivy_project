<MyGrid>

    email: email
    username: username

    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2

            Label:
                text: "email"
            TextInput:
                id: email
                multiline: False

            Label:
                text: "username"

            TextInput:
                id: username
                multiline: False
        
        Button:
            text: "submit"
            on_press: root.btn()